@model IEnumerable<YELPROYECTOESDE.Models.Alojamiento>

@{
    ViewData["Title"] = "Alojamientos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Alojamientos</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Alojamiento
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrEmpty(item.ImagenUrl) ? "/images/default-alojamiento.jpg" : item.ImagenUrl)"
                         class="card-img-top"
                         alt="@item.Nombre"
                         style="height: 200px; object-fit: cover;">

                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">@item.Descripcion</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">@item.Tipo.Nombre</span>
                            <span class="text-muted">
                                <i class="fas fa-user"></i> @item.Capacidad personas
                            </span>
                        </div>

                        <div class="mt-3">
                            <h6>Comodidades:</h6>
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var detalle in item.DetallesAlojamientoComodidad)
                                {
                                    <span class="badge bg-secondary">@detalle.Comodidad.Nombre</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                <i class="fas fa-eye"></i> Ver
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>