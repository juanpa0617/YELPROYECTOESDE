@model YELPROYECTOESDE.Models.Alojamiento

@{
    ViewData["Title"] = "Eliminar Alojamiento";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">¿Está seguro de que desea eliminar este alojamiento?</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="@(string.IsNullOrEmpty(Model.ImagenUrl) ? "/images/default-alojamiento.jpg" : Model.ImagenUrl)"
                         class="img-fluid rounded"
                         alt="@Model.Nombre">
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Nombre</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>

                        <dt class="col-sm-3">Tipo</dt>
                        <dd class="col-sm-9">@Model.Tipo.Nombre</dd>

                        <dt class="col-sm-3">Capacidad</dt>
                        <dd class="col-sm-9">@Model.Capacidad personas</dd>

                        <dt class="col-sm-3">Descripción</dt>
                        <dd class="col-sm-9">@Model.Descripcion</dd>

                        <dt class="col-sm-3">Comodidades</dt>
                        <dd class="col-sm-9">
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var detalle in Model.DetallesAlojamientoComodidad)
                                {
                                    <span class="badge bg-secondary">@detalle.Comodidad.Nombre</span>
                                }
                            </div>
                        </dd>
                    </dl>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        Esta acción no se puede deshacer. Al eliminar este alojamiento, se eliminarán también todos sus registros relacionados.
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirmar Eliminación
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>